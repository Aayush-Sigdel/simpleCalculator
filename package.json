{
    "name": "croakulator",
    "version": "1.0.0",
    "description": "A Simple Calculator - Croakulator.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder -w",
        "build:win": "electron-builder --win nsis",
        "build:mac": "electron-builder --mac dmg zip",
        "build:linux": "electron-builder --linux AppImage deb pacman",
        "build:linux:zip": "electron-builder --linux zip",
        "build:arch": "electron-builder --linux pacman",
        "build:all": "electron-builder -mwl",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Aayush-Sigdel/simpleCalculator.git"
    },
    "keywords": ["calculator", "electron", "desktop-app", "croakulator"],
    "author": "Aayush-Sigdel",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/Aayush-Sigdel/simpleCalculator/issues"
    },
    "homepage": "https://github.com/Aayush-Sigdel/simpleCalculator#readme",
    "devDependencies": {
        "electron": "^38.2.2",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.calculator.croakulator",
        "productName": "Croakulator",
        "asar": true,
        "publish": [],
        "files": [
            "main.js",
            "src/**/*",
            "components/**/*",
            "assets/**/*",
            "package.json"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}-Windows-${version}-Setup.${ext}",
            "icon": "icon.png"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities",
            "artifactName": "${productName}-macOS-${version}.${ext}",
            "icon": "icon.png"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Croakulator"
        },
        "dmg": {
            "backgroundColor": "#2f2f2f",
            "iconSize": 128
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "pacman"
            ],
            "category": "Calculator",
            "maintainer": "Aayush Sigdel",
            "artifactName": "${productName}-Linux-${version}.${ext}",
            "icon": "icon.png"
        },
        "pacman": {
            "packageCategory": "Office",
            "synopsis": "A Simple Calculator - Croakulator",
            "depends": [
                "gtk3",
                "libxss",
                "gconf"
            ]
        }
    }
}
